<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image.to_s, 'main'), width: '400' %>
    </div>
    <div class="col-md-5">
      <%= link_to "Portfolios Edit", edit_portfolio_path if logged_in?(:site_admin) %>

      <h1><%= @portfolio_item.title %></h1>

      <em><%= @portfolio_item.subtitle %></em>

      <p><%= @portfolio_item.body %></p>

      <h3>Tecnologies Used: </h3>

      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>
