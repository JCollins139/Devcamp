<div class="col-md-8 blog-main">
  <h2><%= @blog.title %></h2>
  <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %><br>

  <p><%= @blog.body %></p>
  <%= link_to 'Back', :back %>
  <%= render 'comments/comment_form' %>

  <div id="comments", data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>
</div>
<div class="col-md-4 blog-main">
  <%= render 'shared/blog_sidebar' %>
</div>
